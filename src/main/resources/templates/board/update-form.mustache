{{> layout/header}}

<main class="container p-S content">
    <article>
        <div class="card">
            <div class="card-header"><b>글 수정 화면 입니다.</b></div>
            <div class="card-body">
                <form action="/board/{{board.id}}/update" method="POST">
                    <!-- 작성자 이름-->
                    {{#board}}
                        <div class="mb-3">
                            <input type="text" class="form-control" placeholder="enter username" name="username"
                                   value="{{user.username}}"
                                   readonly>
                        </div>

                        <!-- 제목 입력 -->
                        <div class="mb-3">
                            <input type="text" class="form-control" placeholder="enter title" name="title"
                                   value="{{title}}"
                                   required>
                        </div>

                        <!-- 내용 입력 -->
                        <div class="mb-3">
                            <textarea class="form-control" rows="5" name="content" required>{{content}}</textarea>
                        </div>

                        <button class="btn btn-primary form-controller">글 수정하기</button>
                    {{/board}}
                </form>

            </div>
        </div>
    </article>

</main>

{{> layout/footer}}